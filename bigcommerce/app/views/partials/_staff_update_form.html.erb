<td class="col-xs-2">
	<% if can_update_staff and !staff.nil? %>
		<% @staff_id = staff.id %>

		<%= form_tag :controller => "customer", :action => "update_staff" do %>

		<%= select_tag(:staff_id, options_from_collection_for_select(Staff.active_sales_staff, :id, :nickname, @staff_id), html_options = {:class => 'form-control', :onchange => "this.form.submit()"}) %>

		<%= hidden_field_tag :customer_id, customer.id %>

		<% end %>
	<% else %>
		<%= staff_nickname_direct(staff) %>
	<% end %>
</td>