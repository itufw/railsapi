<table class = "table table-striped table-bordered table-hover table-responsive">
	<tr>
		<th>ID</th>
		<th>Product Name</th>
		<th>Price ( Ex GST )</th>
		<th>Stock</th>
		<th>Pending Stock</th>

	</tr>

	<% @name_h.keys.each do |id| %>
	<tr>
		<td><%= id %></td>
		<td><%= @name_h[id] %></td>
		<td class="num"><%= display_num(@price_h[id]) %></td>
		<td clas = "num" ><%= @stock_h[id] %></td>
		<td clas = "num" ><%= @pending_stock_h[id] %></td>
	</tr>

	<% end %>

</table>