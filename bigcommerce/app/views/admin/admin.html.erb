<div style="margin-top: 50px;">
	<%= form_tag({:action => "password_update_user"}, {:method => "get"}) do %>
	<h4>Password Update :
	</h4>
	<div class="col-xs-2">
		<%= collection_select(:staff, :id, Staff.where("staffs.id = #{session[:user_id]}"), :id, :nickname, {:class => 'form-control'}) %>
	</div>
	<div class="col-xs-4">
		<%= password_field_tag :new_password, nil, class: 'form-control', placeholder: 'New Password'  %>
	</div>
	<div class="col-xs-4">
		<%= password_field_tag :new_password_confirmation, nil, class: 'form-control', placeholder: 'New Password Confirmation'  %>
	</div>

	<%= submit_tag "Update", class: 'btn btn-primary' %>
	<% end %>
</div>
